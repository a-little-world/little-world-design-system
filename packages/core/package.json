{
  "name": "@a-little-world/little-world-design-system-core",
  "version": "1.0.0",
  "description": "Core design tokens and utilities for Little World design system",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "preprocess-svgs": "node scripts/processSvgs.js",
    "build": "rimraf dist && npm run preprocess-svgs && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "watch": "tsc --watch",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a-little-world/little-world-design-system"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/a-little-world/little-world-design-system/issues"
  },
  "homepage": "https://github.com/a-little-world/little-world-design-system#readme",
  "devDependencies": {
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.14.1",
    "@types/react": "^18.2.0",
    "prettier": "^2.8.0",
    "rimraf": "^6.0.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "csstype": "^3.1.2",
    "lodash": "^4.17.21",
    "svgson": "^5.3.1"
  }
}
