{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "moduleDetection": "force"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.config.js",
    "**/*.config.ts",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/testUtils.tsx",
    "**/setupTests.ts"
  ],
  "types": ["@testing-library/jest-dom"],
  "typeRoots": ["./node_modules/@types"]
}
