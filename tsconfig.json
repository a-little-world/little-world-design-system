{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["esnext", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "strict": true,
    "target": "ES5"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.stories.tsx", "**/testUtils.tsx"],
  "types": ["@testing-library/jest-dom"],
  "typeRoots": ["./node_modules/@types"]
}
