{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["esnext", "DOM"],
    "module": "ES2015",
    "noImplicitAny": true,
    "outDir": "dist",
    "strict": true,
    "target": "ES5"
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "dist"],
  "files": ["src/custom.d.ts"],
  "types": ["@testing-library/jest-dom"],
  "typeRoots": ["./src/@types", "./node_modules/@types"]
}
